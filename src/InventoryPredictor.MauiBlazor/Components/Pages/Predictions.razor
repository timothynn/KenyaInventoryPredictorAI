@page "/predictions"
@using InventoryPredictor.MauiBlazor.Services
@using InventoryPredictor.Shared.Models
@inject IPredictionService PredictionService
@inject IInventoryService InventoryService
@inject NavigationManager Navigation

<PageTitle>AI Predictions - Inventory Predictor</PageTitle>

<div class="predictions-container">
    <!-- Header -->
    <div class="page-header">
        <div class="header-content">
            <h1>üîÆ AI-Powered Predictions</h1>
            <p class="subtitle">Intelligent demand forecasting and stock-out prevention</p>
        </div>
        <div class="header-actions">
            <button class="btn-secondary" @onclick="RefreshPredictions">
                üîÑ Refresh Predictions
            </button>
            <button class="btn-primary" @onclick="OpenDataAgent">
                ü§ñ Ask AI Assistant
            </button>
        </div>
    </div>

    @if (isLoading)
    {
        <LoadingSpinner Message="Generating AI predictions..." />
    }
    else
    {
        <!-- Summary Cards -->
        <div class="summary-cards">
            <div class="summary-card warning">
                <div class="card-icon">‚ö†Ô∏è</div>
                <div class="card-content">
                    <h3>@predictedStockOuts</h3>
                    <p>Predicted Stock-Outs (Next 30 Days)</p>
                </div>
            </div>

            <div class="summary-card info">
                <div class="card-icon">üì¶</div>
                <div class="card-content">
                    <h3>@reorderRecommendationsCount</h3>
                    <p>Reorder Recommendations</p>
                </div>
            </div>

            <div class="summary-card success">
                <div class="card-icon">‚úÖ</div>
                <div class="card-content">
                    <h3>@avgAccuracy%</h3>
                    <p>Prediction Accuracy</p>
                </div>
            </div>

            <div class="summary-card neutral">
                <div class="card-icon">üí∞</div>
                <div class="card-content">
                    <h3>KSh @estimatedSavings.ToString("N0")</h3>
                    <p>Potential Cost Savings</p>
                </div>
            </div>
        </div>

        <!-- Tabs -->
        <div class="tabs">
            <button class="tab @(activeTab == "stockouts" ? "active" : "")" 
                    @onclick='() => activeTab = "stockouts"'>
                üö® Stock-Out Predictions
            </button>
            <button class="tab @(activeTab == "reorder" ? "active" : "")" 
                    @onclick='() => activeTab = "reorder"'>
                üìã Reorder Recommendations
            </button>
            <button class="tab @(activeTab == "demand" ? "active" : "")" 
                    @onclick='() => activeTab = "demand"'>
                üìà Demand Forecasts
            </button>
            <button class="tab @(activeTab == "trends" ? "active" : "")" 
                    @onclick='() => activeTab = "trends"'>
                üìä Trend Analysis
            </button>
        </div>

        <!-- Tab Content -->
        <div class="tab-content">
            @if (activeTab == "stockouts")
            {
                <div class="content-section">
                    <h2>üö® Products At Risk of Stock-Out</h2>
                    <p class="section-description">
                        AI-predicted stock-outs based on current inventory levels and demand patterns
                    </p>

                    @if (stockOutPredictions.Any())
                    {
                        <div class="prediction-grid">
                            @foreach (var prediction in stockOutPredictions)
                            {
                                <div class="prediction-card risk-@GetRiskLevel(prediction.StockOutProbability)">
                                    <div class="card-header">
                                        <h3>@prediction.ProductName</h3>
                                        <span class="risk-badge risk-@GetRiskLevel(prediction.StockOutProbability)">
                                            @($"{prediction.StockOutProbability:P0} Risk")
                                        </span>
                                    </div>

                                    <div class="prediction-details">
                                        <div class="detail-row">
                                            <span class="label">Current Stock:</span>
                                            <span class="value">@prediction.CurrentStock @prediction.Unit</span>
                                        </div>
                                        <div class="detail-row">
                                            <span class="label">Days Until Stock-Out:</span>
                                            <span class="value urgent">@prediction.DaysUntilStockOut days</span>
                                        </div>
                                        <div class="detail-row">
                                            <span class="label">Est. Stock-Out Date:</span>
                                            <span class="value">@prediction.EstimatedStockOutDate.ToString("MMM dd, yyyy")</span>
                                        </div>
                                        <div class="detail-row">
                                            <span class="label">Predicted Demand (7d):</span>
                                            <span class="value">@prediction.PredictedDemand7Days units</span>
                                        </div>
                                    </div>

                                    <div class="ai-insights">
                                        <h4>ü§ñ AI Insights:</h4>
                                        <ul>
                                            @foreach (var insight in prediction.Insights)
                                            {
                                                <li>@insight</li>
                                            }
                                        </ul>
                                    </div>

                                    <div class="card-actions">
                                        <button class="btn-action btn-primary" 
                                                @onclick="@(() => CreatePurchaseOrder(prediction))">
                                            Order Now (@prediction.RecommendedOrderQuantity units)
                                        </button>
                                        <button class="btn-action btn-secondary" 
                                                @onclick="@(() => ViewDetails(prediction.ProductId))">
                                            View Details
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <span class="empty-icon">‚úÖ</span>
                            <h3>All Clear!</h3>
                            <p>No stock-out risks detected for the next 30 days</p>
                        </div>
                    }
                </div>
            }
            else if (activeTab == "reorder")
            {
                <div class="content-section">
                    <h2>üìã Smart Reorder Recommendations</h2>
                    <p class="section-description">
                        Optimized order quantities based on demand forecasts and lead times
                    </p>

                    @if (reorderRecommendations.Any())
                    {
                        <div class="reorder-table-wrapper">
                            <table class="reorder-table">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Current Stock</th>
                                        <th>Order Qty</th>
                                        <th>Order By</th>
                                        <th>Urgency</th>
                                        <th>Est. Cost</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in reorderRecommendations)
                                    {
                                        <tr class="urgency-@item.Urgency.ToLower()">
                                            <td>
                                                <div class="product-cell">
                                                    <strong>@item.ProductName</strong>
                                                    <span class="product-code">@item.ProductCode</span>
                                                </div>
                                            </td>
                                            <td>@item.CurrentStock @item.Unit</td>
                                            <td><strong>@item.RecommendedOrderQuantity @item.Unit</strong></td>
                                            <td>@item.RecommendedOrderDate.ToString("MMM dd")</td>
                                            <td>
                                                <span class="urgency-badge urgency-@item.Urgency.ToLower()">
                                                    @item.Urgency
                                                </span>
                                            </td>
                                            <td>KSh @item.EstimatedCost.ToString("N0")</td>
                                            <td>
                                                <button class="btn-sm btn-primary" 
                                                        @onclick="@(() => CreatePurchaseOrder(item))">
                                                    Order
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="bulk-actions">
                            <button class="btn-primary" @onclick="CreateBulkOrder">
                                üì¶ Create Bulk Purchase Order (@reorderRecommendations.Count items)
                            </button>
                            <span class="total-cost">
                                Total Estimated Cost: KSh @reorderRecommendations.Sum(r => r.EstimatedCost).ToString("N0")
                            </span>
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <span class="empty-icon">‚úÖ</span>
                            <h3>All Stocked Up!</h3>
                            <p>No reordering needed at this time</p>
                        </div>
                    }
                </div>
            }
            else if (activeTab == "demand")
            {
                <div class="content-section">
                    <h2>üìà 30-Day Demand Forecasts</h2>
                    <p class="section-description">
                        AI-generated demand predictions for your top products
                    </p>

                    <div class="search-bar">
                        <input type="text" 
                               placeholder="üîç Search products..." 
                               @bind="searchQuery"
                               @bind:event="oninput" />
                    </div>

                    @if (filteredDemandForecasts.Any())
                    {
                        <div class="forecast-list">
                            @foreach (var forecast in filteredDemandForecasts)
                            {
                                <div class="forecast-card">
                                    <div class="forecast-header">
                                        <div>
                                            <h3>@forecast.ProductName</h3>
                                            <span class="forecast-meta">
                                                Confidence: @($"{forecast.ConfidenceScore:P0}") 
                                                | Trend: @GetTrendEmoji(forecast.Trend) @forecast.Trend
                                            </span>
                                        </div>
                                    </div>

                                    <div class="forecast-chart">
                                        <PredictionChart Data="@forecast.DemandForecast" />
                                    </div>

                                    <div class="forecast-metrics">
                                        <div class="metric">
                                            <span class="metric-label">7-Day Forecast</span>
                                            <span class="metric-value">@forecast.PredictedDemand7Days units</span>
                                        </div>
                                        <div class="metric">
                                            <span class="metric-label">14-Day Forecast</span>
                                            <span class="metric-value">@forecast.PredictedDemand14Days units</span>
                                        </div>
                                        <div class="metric">
                                            <span class="metric-label">30-Day Forecast</span>
                                            <span class="metric-value">@forecast.PredictedDemand30Days units</span>
                                        </div>
                                    </div>

                                    @if (forecast.IsSeasonalProduct)
                                    {
                                        <div class="seasonality-badge">
                                            üå°Ô∏è Seasonal Product Detected
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <span class="empty-icon">üìä</span>
                            <p>No demand forecasts available</p>
                        </div>
                    }
                </div>
            }
            else if (activeTab == "trends")
            {
                <div class="content-section">
                    <h2>üìä Trend Analysis & Insights</h2>
                    <p class="section-description">
                        Market trends and patterns identified by AI
                    </p>

                    <div class="trends-grid">
                        @foreach (var trend in trendInsights)
                        {
                            <div class="trend-card">
                                <div class="trend-icon">@trend.Icon</div>
                                <h3>@trend.Title</h3>
                                <p>@trend.Description</p>
                                <div class="trend-impact impact-@trend.Impact.ToLower()">
                                    Impact: @trend.Impact
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }

    <!-- AI Data Agent Modal -->
    @if (showDataAgent)
    {
        <div class="modal-overlay" @onclick="CloseDataAgent">
            <div class="modal-content" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h2>ü§ñ AI Assistant</h2>
                    <button class="btn-close" @onclick="CloseDataAgent">√ó</button>
                </div>
                <DataAgentChat OnClose="CloseDataAgent" />
            </div>
        </div>
    }
</div>

@code {
    private bool isLoading = true;
    private string activeTab = "stockouts";
    private string searchQuery = "";
    private bool showDataAgent = false;

    // Data
    private List<PredictionResult> stockOutPredictions = new();
    private List<ReorderRecommendation> reorderRecommendations = new();
    private List<PredictionResult> demandForecasts = new();
    private List<TrendInsight> trendInsights = new();

    // Summary metrics
    private int predictedStockOuts = 0;
    private int reorderRecommendationsCount = 0;
    private int avgAccuracy = 87;
    private decimal estimatedSavings = 0;

    private IEnumerable<PredictionResult> filteredDemandForecasts => 
        demandForecasts.Where(f => string.IsNullOrWhiteSpace(searchQuery) || 
                                   f.ProductName.Contains(searchQuery, StringComparison.OrdinalIgnoreCase));

    protected override async Task OnInitializedAsync()
    {
        await LoadPredictions();
    }

    private async Task LoadPredictions()
    {
        isLoading = true;

        try
        {
            // Load stock-out predictions
            stockOutPredictions = await PredictionService.GetStockOutPredictionsAsync(30);
            predictedStockOuts = stockOutPredictions.Count;

            // Load reorder recommendations
            reorderRecommendations = await PredictionService.GetReorderRecommendationsAsync();
            reorderRecommendationsCount = reorderRecommendations.Count;

            // Load demand forecasts
            demandForecasts = await PredictionService.GetDemandForecastsAsync();

            // Load trend insights
            trendInsights = await PredictionService.GetTrendInsightsAsync();

            // Calculate estimated savings
            estimatedSavings = CalculateEstimatedSavings();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading predictions: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task RefreshPredictions()
    {
        await LoadPredictions();
        StateHasChanged();
    }

    private string GetRiskLevel(decimal probability)
    {
        return probability switch
        {
            >= 0.8m => "high",
            >= 0.5m => "medium",
            _ => "low"
        };
    }

    private string GetTrendEmoji(TrendDirection trend)
    {
        return trend switch
        {
            TrendDirection.Increasing => "üìà",
            TrendDirection.Decreasing => "üìâ",
            TrendDirection.Stable => "‚û°Ô∏è",
            TrendDirection.Volatile => "üìä",
            _ => "‚û°Ô∏è"
        };
    }

    private void CreatePurchaseOrder(PredictionResult prediction)
    {
        Navigation.NavigateTo($"/orders/create?productId={prediction.ProductId}&quantity={prediction.RecommendedOrderQuantity}");
    }

    private void CreatePurchaseOrder(ReorderRecommendation item)
    {
        Navigation.NavigateTo($"/orders/create?productId={item.ProductId}&quantity={item.RecommendedOrderQuantity}");
    }

    private void CreateBulkOrder()
    {
        var productIds = string.Join(",", reorderRecommendations.Select(r => r.ProductId));
        Navigation.NavigateTo($"/orders/create-bulk?products={productIds}");
    }

    private void ViewDetails(Guid productId)
    {
        Navigation.NavigateTo($"/inventory/details/{productId}");
    }

    private void OpenDataAgent()
    {
        showDataAgent = true;
    }

    private void CloseDataAgent()
    {
        showDataAgent = false;
    }

    private decimal CalculateEstimatedSavings()
    {
        // Simple calculation: prevent stockouts saves opportunity cost
        // Assume 20% margin loss per stockout day
        return stockOutPredictions.Sum(p => p.CurrentStock * p.UnitPrice * 0.2m * p.DaysUntilStockOut);
    }
}

